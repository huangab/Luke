<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:Android="http://schemas.android.com/tools"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_me_information_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="40dp"
                android:src="@mipmap/head"
                app:riv_border_color="#00000000"
                app:riv_border_width="1dp"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                app:riv_tile_mode="clamp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:background="@drawable/top"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                android:paddingLeft="20dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_cog_mine"/>


                <TextView
                    android:id="@+id/tv_me_information_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center|left"
                    android:layout_marginLeft="20dp"
                    android:selectAllOnFocus="true"
                    android:focusable="true"
                    android:text="苏木"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/text_04">

                </TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:background="@drawable/top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_cog_sex"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/rbt_me_inform_male"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:checked="true"
                        android:button="@null"
                        android:background="@drawable/selector_setting_radiobutton"
                        />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="5dp"
                           android:text="男"/>
                    <RadioButton
                        android:id="@+id/rbt_me_inform_female"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="20dp"
                        android:button="@null"
                        android:background="@drawable/selector_setting_radiobutton"
                       />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="女"/>

                </RadioGroup>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_me_information_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:background="@drawable/top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_cog_city"/>


                <TextView
                    android:id="@+id/et_me_information_province"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/button_color"
                    android:gravity="center|left"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="福建省"
                    android:textSize="@dimen/text_04"/>
                <TextView
                    android:id="@+id/et_me_information_city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/button_color"
                    android:gravity="center|left"
                    android:text="厦门市"
                    android:textSize="@dimen/text_04"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:background="@drawable/top_bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_cog_birthday"/>

                <TextView
                    android:id="@+id/et_me_brithday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/button_color"
                    android:gravity="center|left"
                    android:paddingRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="生日"
                    android:textSize="@dimen/text_04">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:background="@drawable/top_bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_cog_introduce"/>

                <EditText
                    android:id="@+id/tv_me_information_"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center|left"
                    android:layout_marginLeft="20dp"
                    android:hint="介绍一下你自己吧"
                    android:textSize="@dimen/text_04">

                </EditText>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
