<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="130dp"
                                             android:orientation="vertical"
                                             android:id="@+id/rl_me_wave_head"
                                             xmlns:DoubleWaveView="http://schemas.android.com/apk/res-auto">

    <com.doublewave.DoubleWaveView
        android:id="@+id/waveView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimaryDark"
        DoubleWaveView:peakValue="20dp"
        DoubleWaveView:speedOne="8"
        DoubleWaveView:speedTwo="5"
        DoubleWaveView:waveColor="@color/waveColor"
        DoubleWaveView:waveHeight="45dp"
        >

    </com.doublewave.DoubleWaveView>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_me_information_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/head"
        app:riv_border_color="#00000000"
        app:riv_border_width="1dp"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        app:riv_tile_mode="clamp"
        app:layout_constraintTop_toTopOf="@+id/waveView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/waveView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/waveView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/iv_me_information_image"
        android:layout_alignParentBottom="true"
      >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="right|center"
            android:text="     关注"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="0"/>
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:background="#FFF"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="被关注"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="0"/>
    </LinearLayout>

</RelativeLayout>
