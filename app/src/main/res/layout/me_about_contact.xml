<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
              android:orientation="vertical">

    <include layout="@layout/title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_contact_tel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_hight"
            android:layout_marginBottom="2px"
            android:background="@drawable/selector_top_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="联系电话"
                android:textColor="@color/all_text_color"
                android:textSize="@dimen/text_04"/>

            <TextView
                android:id="@+id/tv_tel"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="1008611"/>

        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contact_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_hight"
            android:layout_marginBottom="2px"
            android:background="@drawable/selector_top_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="联系邮箱"
                android:textColor="@color/all_text_color"
                android:textSize="@dimen/text_04"/>

            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="yphuang0@qq.com"/>

        </LinearLayout>
        </LinearLayout>
