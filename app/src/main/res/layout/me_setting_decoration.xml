<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
             android:orientation="vertical"
              android:background="@color/white_bg_color">

    <include layout="@layout/title"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/tab_text_normal"
        android:text="选择现在的装修状态"/>

    <LinearLayout
        android:id="@+id/ll_decoration_no"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:background="@drawable/selector_top_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="2px">

        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="暂无装修计划"
            android:checkMark="@mipmap/choice_right"
            android:textColor="@color/all_text_color"
            android:textSize="@dimen/text_04"/>

    </LinearLayout>


    <LinearLayout
    android:id="@+id/ll_decoration_prepare"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_hight"
    android:background="@drawable/selector_top_white"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginBottom="2px">

    <CheckedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:text="准备装修"
        android:checked="false"
        android:textColor="@color/all_text_color"
        android:textSize="@dimen/text_04"/>

</LinearLayout>
    <LinearLayout
    android:id="@+id/ll_decoration_ing"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_hight"
    android:background="@drawable/selector_top_white"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginBottom="2px">

    <CheckedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:text="正在装修"
        android:textColor="@color/all_text_color"
        android:textSize="@dimen/text_04"/>

</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_decoration_already"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:background="@drawable/selector_top_bottom_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="2px">

        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="已经入住"
            android:textColor="@color/all_text_color"
            android:textSize="@dimen/text_04"/>

    </LinearLayout>

</LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
